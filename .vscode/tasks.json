{
    //сборка файла ctrl+shift+B
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build myfile",
            "type": "shell",
            "command": "g++",
            "args": [
                "-std=c++14",
                "-g",
                "-o",
                "${fileBasenameNoExtension}.exe",
                "${fileBasename}"
            ],
            "group": "build"
        }
    ]
}